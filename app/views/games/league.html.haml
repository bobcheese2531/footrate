%div.container
  %h1
    = link_to @title, league_games_path(code: params[:code], year: "")
  
  %div.dropdown
    %button#dropdownMenuButton.btn.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
      シーズン一覧
    %div.dropdown-menu{"aria-labelledby" => "dropdownMenuButton"}
      = link_to "現在のシーズン",  league_games_path(code: params[:code], year: "", title: params[:title]), class: "dropdown-item" 
      = link_to "20-21シーズン",  league_games_path(code: params[:code], year: 2020, title: params[:title]), class: "dropdown-item" 
      = link_to "19-20シーズン",  league_games_path(code: params[:code], year: 2019, title: params[:title]), class: "dropdown-item" 
      = link_to "18-19シーズン",  league_games_path(code: params[:code], year: 2018, title: params[:title]), class: "dropdown-item" 
      
    = link_to "得点ランキング",  scorers_games_path(code: params[:code], year: params[:year])

%div.container.mt-3
  %div.row
    %div.col-md-9
      = render 'games', matches: @matches
    %div.col-md-3
      = render 'standings', standings: @standings
