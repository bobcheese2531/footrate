// shirtnumber
%div.col-12.col-md-2.col-lg-1.mb-1
  %div.form_group
    = f.number_field :shirtnumber, value: player['shirtNumber'], name: "rate_form[players_attributes][][shirtnumber]", :readonly => true, class: "form-control"

// position
%div.col-xs-12.col-md-2.mb-1
  %div.form_group
    = f.text_field :position, value: player['position'], name: "rate_form[players_attributes][][position]", :readonly => true, class: "form-control"

// player name
%div.col-12.col-md-2.mb-1
  %div.form_group
    = f.text_field :name, value: player['name'], name: "rate_form[players_attributes][][name]", :readonly => true , class: "form-control"

// rate
%div.col-12.col-md-2.col-lg-3.mb-1
  %div.range
    = f.range_field :player_rate, :in => 1..10, :step => 1, :value => 6, name: "rate_form[players_attributes][][player_rate]"
    %span.score 6

// comment   
%div.col-12.col-md-4.col-lg-4.mb-3
  %div.form_group
    = f.text_area :rate_text, :placeholder => "コメントを入力", name: "rate_form[players_attributes][][rate_text]", class: "form-control"

    = f.hidden_field :team_id, value: team_id, name: "rate_form[players_attributes][][team_id]"



// show value for range_field
:javascript
  var elem = document.getElementsByClassName('range');
  var rangeValue = function (elem, target) {
    return function(evt){
      target.innerHTML = elem.value;
    }
  }
  for(var i = 0, max = elem.length; i < max; i++){
    bar = elem[i].getElementsByTagName('input')[0];
    target = elem[i].getElementsByTagName('span')[0];
    bar.addEventListener('input', rangeValue(bar, target));
  }
    