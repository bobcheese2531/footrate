<div class="alert alert-danger" role="alert">
  *がついたものは入力必須
</div>

<%= form_for(@game) do |form| %>
  <h2>試合情報</h2>
    <table class="table table-bordered">
      <tr>
        <th scope="col"><%= form.label :home_team, "*ホームチーム" %></th>
        <td><%= form.text_field :home_team, :placeholder => "英3文字" %></td>
      </tr>
      <tr>
        <th scope="col"><%= form.label :away_team, "*アウェイチーム" %></th>
        <td><%= form.text_field :away_team, :placeholder => "英3文字" %></td>
      </tr>
      <tr>
        <th scope="col"><%= form.label :home_score, "*ホームチーム点数" %></th>
        <td><%= form.number_field :home_score %></td>
      </tr>
      <tr>
        <th scope="col"><%= form.label :away_score, "*アウェイチーム点数" %></th>
        <td><%= form.text_field :away_score, :placeholder => "英3文字" %></td>
      </tr>
      <tr>
        <th scope="col"><%= form.label :date, "*日付" %></th>
        <td><%= form.date_select :date %></td>
      </tr>
      <tr>
        <th scope="col"><%= form.label :rate_team, "*評価するチーム" %></th>
        <td><%= form.text_field :rate_team, :placeholder => "英3文字" %></td>
      </tr>
      <tr>
        <th scope="col"><%= form.label :youtube_url, "YouTube URL" %></th>
        <td><%= form.text_field :youtube_url, :placeholder => "URLを貼り付けてください" %></td>
      </tr>
    </table>

  <h2>選手評価</h2>
    <%= form.fields_for :rates do |r| %>
      <%= render partial: "rate_fields", locals: {f: r} %>
    <% end %>
  
  <%= form.submit '評価する', class: "btn btn-primary" %>
  
<% end %>