<h1><%= @user.name %>のプロフィール</h1>

<% if @user.image? %>
  <%= @user.image %>
<% end %>

<%= @user.like_team %>
<%= @user.user_text %>

<% if user_signed_in? && current_user != @user %>
  <%= link_to 'chatを始める', chat_path(@user.id)%>
<% end %>

<% @games.each do |game| %>
  <%= render 'games/game', game: game %>
<% end %>