%div.row.d-flex.align-items-center.justify-content-center
  - matches.each do |m|
    %div.card.col-12.col-lg-5.mx-1.my-2
      %p.border-bottom= game_date(m['utcDate'])
      %div.row.d-flex.align-items-center
        %div.col-12.col-md-9
          %p.pt-1
            = image_tag "https://crests.football-data.org/#{m["homeTeam"]["id"]}.svg", size: "40x40"
            = m['homeTeam']['name']
            %strong= score_home(m) if match_finished?(m['status'])
          %p.pb-1
            = image_tag "https://crests.football-data.org/#{m["awayTeam"]["id"]}.svg", size: "40x40"
            = m['awayTeam']['name']
            %strong= score_away(m) if match_finished?(m['status'])
        %div.col-12.col-md-3.mb-2
          - if match_finished?(m['status'])
            = link_to "詳細", game_path(m["id"]), class: "btn btn-outline-success" 
          - elsif m['status'] == "IN_PLAY"
            = link_to "ライブ", game_path(m["id"]), class: "btn btn-outline-danger" 
          - elsif m['status'] == "SCHEDULED"
            .btn.btn-outline-secondary= get_time(m['utcDate']) 
    