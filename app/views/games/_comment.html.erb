<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">名前</th>
      <th scope="col">コメント</th>
    </tr>
  </thead>
  <% @comments.each do |c| %>
  <tbody>
    <tr>
      <td>
        <%= render 'layouts/profile_image', c: c %>
      </td>
      <td><%= c.comment %></td>
    </tr>
  </tbody>
  <% end %>
</table>

<% if user_signed_in? %>
  <%= form_for [@game, @comment] do |f| %>
    <div class="my-3">
      <div class="container">
        <div class="row justify-content-start">
          <%= f.text_area :comment, size: "50x2", :placeholder => "コメントを入力してください" %>
          <div class="ml-3">
            <%= f.submit 'コメントする', class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>