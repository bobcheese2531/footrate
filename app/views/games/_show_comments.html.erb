<h2>コメント一覧</h2>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">名前</th>
      <th scope="col">コメント</th>
    </tr>
  </thead>
  <% @comments.each do |c| %>
  <tbody>
    <tr>
      <td>
        <a href="/users/<%= c.user.id %>">
        <% if c.user.image? %>
          <%= image_tag c.user.image.url, :size =>'50x50' %><%= c.user.name %>
        <% else %>
          <%= image_tag 'default.png', :size =>'50x50' %><%= c.user.name %>
        <% end %>
        </a>
      </td>
      <td><%= c.comment %></td>
    </tr>
  </tbody>
  <% end %>
</table>