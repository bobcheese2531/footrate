<h1><%= @user.name %>とのチャット</h1>

  <table class="table table-bordered">
    <thead class="thead">
      <tr>
        <th scope="col">名前</th>
        <th scope="col">メッセージ</th>
      </tr>
    </thead>
    <% @chats.each do |c| %>
    <tbody>
      <tr>
        <td>
          <a href="/users/<%= c.user.id %>">
            <% if c.user.image? %>
              <%= image_tag c.user.image.url, :size =>'40x40' %><%= c.user.name %>
            <% else %>
              <%= image_tag 'default.png', :size =>'50x50' %><%= c.user.name %>
            <% end %>
          </a>
        </td>
        <td><%= c.message %></td>
      </tr>
    </tbody>
    <% end %>
  </table>

<!--送信フォーム-->
<%= form_with model: @chat do |f| %>
  <div class="container mb-3">
    <div class="row justify-content-start">
      <%= f.text_area :message, size: "50x2", :placeholder => "メッセージを入力してください"  %>
      <%= f.hidden_field :room_id %>
      <div class="m-3">
        <%= f.submit '送信', class: "btn btn-primary" %>
      </div>  
    </div>
  </div>
<% end %>