<div class="container">
  <div class="row justify-content-between">
    
    <h1><%= profile_image(@user) %></h1>
    
    <%= render 'user_options' %>
    
  </div>
</div>

<%= render 'relationships/stats' %>
  
<table class="table table-bordered">
  <tr>
    <th scope="col">好きなチーム</th>
    <td><%= @user.like_team %></td>
  </tr>
  
  <tr>
    <th scope="col">コメント</th>
    <td><%= @user.user_text %></td>
  </tr>
</table>


<h2>投稿一覧</h2>
<%= render 'games/show_all' %>

<div class="container">
  <%= paginate @games %>
</div>