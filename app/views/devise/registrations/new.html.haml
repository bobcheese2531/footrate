%div.form-wrapper

  // title
  %h1.midasi 新規登録
  
  // form
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    
    // name
    %div.form-item
      = f.label :name, "名前(必須)"
      = f.text_field :name
      
    // email
    %div.form-item
      = f.label :email, "メールアドレス（必須）"
      = f.email_field :email, autofocus: true, autocomplete: "email"
      
    // password
    %div.form-item
      = f.label :password, "パスワード（必須）"
      - if @minimum_password_length
        %em
          (最低#{@minimum_password_length}文字)
      = f.password_field :password, autocomplete: "new-password"
    %div.form-item
      = f.label :password_confirmation, "確認用パスワード（必須）"
      = f.password_field :password_confirmation, autocomplete: "new-password"
      
    // like team
    %div.form-item
      = f.label :like_team, "好きなチーム（必須）", class: "form-label mr-2"
      = f.select :like_team, options_for_select(@teams.map{|t|[t["name"], t["id"]]}), class: "form-control"
      
    // button
    %div.button-panel
      = f.submit "登録", class: "button"
      
    %div.form-footer
      = render "devise/shared/links"
