%h1
  = @rate.user.name
  の投稿
= link_to "削除", "/rates/#{@rate.id}", method: :delete if user_signed_in? && @rate.user.id == current_user.id
= link_to "編集", edit_player_path(rate_id: params[:id])

%table.table
  %thead
    %tr
      %th チーム
      %th 背番号
      %th ポジション
      %th 名前
      %th 点数
      %th 感想
        
  %tbody
    - @players.each do |p|
      %tr
        %td
          = image_tag "https://crests.football-data.org/#{p.team_id}.svg", size: "30x30"
        %td
          = p.shirtnumber
        %td
          = p.position
        %td
          = p.name
        %td
          = p.player_rate
        %td
          = p.rate_text
  