%h1= link_to competiton_title(params[:code]), euro_games_path(code: params[:code], year: "", day: 1), class: "midasi"
 
%div.container
  %div.d-flex.justify-content-end
    %div.row
      %div.dropdown.mx-1.my-1
        %button#dropdownMenuButton.btn.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
          節
        %div.dropdown-menu{"aria-labelledby" => "dropdownMenuButton"}
          - 3.times do |i|
            = link_to "グループステージ第#{i + 1}節", euro_games_path(code: params[:code], year: params[:year], day: (i + 1)), class: "dropdown-item" 
          = link_to "ラウンド16", euro_games_path(code: params[:code], year: params[:year], stage: "LAST_16"), class: "dropdown-item"
          = link_to "準々決勝", euro_games_path(code: params[:code], year: params[:year], stage: "QUARTER_FINAL"), class: "dropdown-item"
          = link_to "準決勝", euro_games_path(code: params[:code], year: params[:year], stage: "SEMI_FINAL"), class: "dropdown-item"
          = link_to "決勝", euro_games_path(code: params[:code], year: params[:year], stage: "FINAL"), class: "dropdown-item"
      %div.mx-1.my-1
        = link_to "得点ランキング",  scorers_games_path(code: params[:code], year: params[:year]), class: "btn"

  %div.mt-3
    = render 'games', matches: @matches
    
    = render 'tournament_standings', standings: @standings