= form_with model: @player, url: players_path, method: :post, local: true do |form|
  = render 'layouts/error_messages', model: form.object
  
  %h2
    = image_tag "https://crests.football-data.org/#{@match["homeTeam"]["id"]}.svg", size: "30x30"
    = @match["homeTeam"]["name"]
  %table
    %thread
      %tr
        %th 背番号
        %th ポジション
        %th 名前
        %th 点数
        %th 感想
    
    %tbody
      - @match["homeTeam"]["lineup"].each do |home|
        = form.fields_for :players do |f|
          = render 'field_form', {f: f, player: home, team_id: @match["homeTeam"]["id"]}
          
  %h2
    = image_tag "https://crests.football-data.org/#{@match["awayTeam"]["id"]}.svg", size: "30x30"
    = @match["awayTeam"]["name"]            
  %table
    %thread
      %tr
        %th 背番号
        %th ポジション
        %th 名前
        %th 点数
        %th 感想
        
    %tbody
      - @match["awayTeam"]["lineup"].each do |away|
        = form.fields_for :players do |f|
          = render 'field_form', {f: f, player: away, team_id: @match["awayTeam"]["id"]}
          
  = form.submit "登録"
