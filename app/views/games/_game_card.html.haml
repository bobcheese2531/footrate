%div.row.d-flex.align-items-center.justify-content-center
  - matches.each do |m|
    %div.card.border-dark.col-md-6.my-1.mr-1
      %h8
        = game_time(m['utcDate'])
        = link_to "詳細", game_path(m["id"]) if m["status"] == "FINISHED"
      %div.card-body
        %div.row.d-flex.align-items-center.justify-content-center
          %div.col-md-5.text-left
            = image_tag "https://crests.football-data.org/#{m["homeTeam"]["id"]}.svg", size: "70x70"
            &emsp;
            = m['score']['fullTime']['homeTeam']
            %br
            = m['homeTeam']['name']
          %div.col-md-5.text-right
            = m['score']['fullTime']['awayTeam']
            &emsp;
            = image_tag "https://crests.football-data.org/#{m["awayTeam"]["id"]}.svg", size: "70x70"
            %br
            = m['awayTeam']['name']
        
  