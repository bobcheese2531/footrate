<h1>チャット</h1>

  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">名前</th>
        <th scope="col">メッセージ</th>
      </tr>
    </thead>
    <% @chats.each do |c| %>
    <tbody>
      <tr>
        <td><%= c.user.name %></td>
        <td><%= c.message %></td>
      </tr>
    </tbody>
    <% end %>
  </table>

<!--送信フォーム-->
<%= form_with model: @chat do |f| %>
  <%= f.text_field :message %>
  <%= f.hidden_field :room_id %>
  <%= f.submit '送信', class: "btn btn-primary" %>
<% end %>